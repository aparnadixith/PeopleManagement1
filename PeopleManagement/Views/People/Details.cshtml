@model Person

<div>
    <h2>@Model.Name</h2>
    <p>Phone: @Model.PhoneNumber</p>
    <p>City: @Model.City</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
</form>
